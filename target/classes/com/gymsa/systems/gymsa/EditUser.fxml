<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<Pane xmlns:fx="http://javafx.com/fxml" fx:controller="com.gymsa.systems.gymsa.EditUserController" stylesheets="@EditUserStyle.css" prefWidth="400" prefHeight="250">
    <style>
        -fx-background-color: #2b2b2b;
        -fx-border-color: #444;
        -fx-border-radius: 8;
    </style>

    <Label text="Modificar Usuario" layoutX="140" layoutY="20" style="-fx-font-size: 18px; -fx-text-fill: white;" />

    <Label text="Nombre de usuario:" layoutX="50" layoutY="80" style="-fx-text-fill: white;" />
    <TextField fx:id="usernameField" layoutX="170" layoutY="75" prefWidth="180" style="-fx-background-color: #000000; -fx-text-fill: white; -fx-border-color: white;"/>

    <Label text="Administrador:" layoutX="50" layoutY="130" style="-fx-text-fill: white;" />
    <CheckBox fx:id="adminCheckBox" layoutX="170" layoutY="125" style="-fx-text-fill: white;" />

    <Button fx:id="saveButton" text="Guardar" layoutX="90" layoutY="180" prefWidth="100" styleClass="custom-red-button" onAction="#handleSave" />
    <Button fx:id="cancelButton" text="Cancelar" layoutX="210" layoutY="180" prefWidth="100" styleClass="custom-red-button" onAction="#handleCancel"/>
</Pane>
