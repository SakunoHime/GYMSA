<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.gymsa.systems.gymsa.AboutController"
            prefWidth="400" prefHeight="300"
            stylesheets="@aboutViewStyle.css"
            styleClass="background">

    <!-- Contenedor principal de Acerca de -->
    <VBox layoutX="20" layoutY="20" spacing="10" styleClass="about-menu">

        <!-- Título -->
        <Label text="Acerca de la Aplicación" styleClass="label-style" />

        <!-- Información -->
        <Label text="Nombre de la Aplicación: Gymsa" styleClass="label-style" />
        <Label text="Versión: 0.1.1" styleClass="label-style" />
        <Label text="Descripción: Gymsa es una aplicación diseñada para gestionar y optimizar" styleClass="label-style" />
        <Label text="las actividades de los gimnasios, facilitando la administración de usuarios, pagos y ajustes de configuración." styleClass="label-style" />
        <Label text="Desarrolladores: " styleClass="label-style" />
        <Label text="Correo de Contacto: " styleClass="label-style" />
        <Label text="Licencia: Este software es un producto comercial." styleClass="label-style" />
        <Label text="Agradecimientos:" styleClass="label-style" />

        <!-- Botón para cerrar -->
        <Button fx:id="closeButton" text="Cerrar" onAction="#handleClose" styleClass="about-button" />
    </VBox>
</AnchorPane>
